<style lang="less">
.login{
  display: flex;
  align-items: center;
  justify-content: center; 
  width: 710rpx;
  height: 80rpx;
  line-height: 20px;
  border-radius: 5px;
  color: #ffffff;
  font-size: 14px;
}
.login-wechat{
  position: fixed;
  bottom:10rpx;
  background-color: #5383c3;
  color: #ffffff;
}
.invite_avatar {
  float: left;
  width: 90rpx;
  height: 90rpx;
  margin-left:30rpx;
  margin-top:30rpx;
}
.invite_avatar image{
  width: 90rpx;
  height:90rpx;
  border-radius: 50%;
}
.nickName{
  float: left;
  color: rgba(51, 51, 51, 1);
  font-size: 16px;
  font-weight: bold;
  margin-top:60rpx;
  margin-left:20rpx;
}
.level{
  position:absolute;
  color: rgba(51, 51, 51, 1);
  font-size: 16px;
  font-weight: bold;
  left:380rpx;
  margin-top:60rpx;
}
.contacts{
  float: right;
  margin-top:30rpx;
  margin-right:20rpx;
  color: rgba(128, 128, 128, 1);
  font-size: 14px;
