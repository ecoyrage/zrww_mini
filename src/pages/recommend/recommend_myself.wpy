  color: #ffffff;
}

.zrww{
  font-size:12px;
  color:#888;
  background-color: #EEE;
}
.text_area{
  margin:30rpx 30rpx;
  width:90%;
  color:#333;
  font-size:14px;
  height:400rpx;
}
.flex{
  display: flex;
  align-items: center;
  justify-content: center; 
}
.card{
  height: 140rpx;
  display: flex;
  align-items: center;
}
.card_img{
  border-radius: 50%;
  width:80rpx;
