}
.card_showName{
  font-size: 16px;
  font-weight: bold;
  margin-left:40rpx;
  margin-top:-40rpx;
}
.card_title{
  font-size:12px;
  color:#888;
  margin-top:-40rpx;
  margin-left:20rpx;
